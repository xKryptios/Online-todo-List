<%-include("partials/header")-%>


    <div id="heading" class="box">
        <h1> <%=title %> </h1>
    </div>
    <div class="box">
        <% items.forEach(function(element){ %>
            <form action="/delete" method="post">
                <div class="item">
                        <input type="checkbox" name="checkbox" value="<%= element.id %>" onChange="this.form.submit()">
                        <p class="item"><%= element.name %></p>
                </div>
                <input type="hidden" name="hidden" value='<%= title %>'>
            </form>
        <% }); %>

        <!-- a post form to create new item in todolist -->
            <form class="item" action="/" method="POST">
            <input type="text" name="text" placeholder="New Item" required>
            <button type="submit" name="button" value= <%= title %> >+</button>
            </form>
    </div>


<%-include("partials/footer")-%>